<?xml version="1.0" encoding="UTF-8"?>
<Context path="/">
    <Resource 
        name="jdbc/userdb" 
        url="jdbc:mysql://localhost:3307/userdb" 
        username="root" 
        password="password" 
        maxActive="100" 
        maxIdle="30" 
        maxWait="10000" 
        logAbandoned="true" 
        removeAbandoned="true" 
        removeAbandonedTimeout="60" 
        type="javax.sql.DataSource" 
        driverClassName="com.mysql.jdbc.Driver"
        auth="Container" 
    />
</Context>
